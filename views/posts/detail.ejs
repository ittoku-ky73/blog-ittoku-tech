<div class="post__detail">
  <h1><%- title %></h1>
  <ul class="post__detail__date">
    <li>作成時：<%= post.created_at %></li>
    <li>更新時：<%= post.updated_at %></li>
  </ul>
  <article>
    <div>
      <%- post.content %>
    </div>
  </article>
</div>
